<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:background="@drawable/gold_rounded_bg"
    android:paddingBottom="10dp"
    android:layout_margin="10dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/contactImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.6"
        android:background="@color/dark_blue"
        android:scaleType="centerCrop"
        android:src="@drawable/default_contact_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/contactName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_bias="0.1"
        android:maxLines="1"
        android:background="@drawable/gold_rounded_bg"
        app:layout_constraintStart_toStartOf="@id/contactImage"
        app:layout_constraintEnd_toEndOf="@id/contactImage"
        android:gravity="start"
        app:layout_constraintBottom_toBottomOf="@id/contactImage"
        android:text="@string/default_name_value"
        android:textSize="16sp"
        android:layout_marginBottom="10dp"
        android:layout_marginVertical="10dp"
        android:textStyle="bold"
        android:padding="10dp"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/contactEmail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintWidth_percent="0.8"
        android:backgroundTint="@android:color/transparent"
        android:drawableStart="@drawable/drop_down_ic"
        android:drawablePadding="5dp"
        android:paddingVertical="10dp"
        android:text="@string/default_email_value"
        android:textSize="11sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/contactImage"
        app:layout_constraintHorizontal_bias="0.1"
        android:gravity="start"
        />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/contactNumber"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/transparent"
        android:drawableStart="@drawable/phone_ic"
        android:drawablePadding="5dp"
        android:paddingVertical="10dp"
        android:text="@string/default_number_value"
        android:inputType="number"
        android:maxLength="11"
        android:textSize="11sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/contactEmail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/contactEmail"
        android:gravity="start"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/deleteContact"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingVertical="10dp"
        android:backgroundTint="@android:color/holo_red_light"
        app:icon="@drawable/trash_can_ic"
        app:iconPadding="5dp"
        android:text="Delete"
        android:textSize="14sp"
        android:textStyle="bold"
        app:iconGravity="textStart"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/contactNumber"
        android:layout_marginHorizontal="10dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>