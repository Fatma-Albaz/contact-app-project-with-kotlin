<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ContactApp" parent="Theme.Material3.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_blue</item>
        <item name="colorPrimaryVariant">@color/light_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowBackground">@color/dark_blue</item>
        <item name="bottomSheetStyle">@style/shapeFragmentAppearance</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="window_bg" parent="Theme.ContactApp">
        <item name="android:windowBackground">
            @color/dark_blue
        </item>
        <item name="strokeWidth">10dp</item>
        <item name="strokeColor">@color/gold</item>

    </style>
    <style name="Theme.MyApp.Splash" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>
    <style name="goldTextStyle" parent="Theme.Material3.DayNight">
        <item name="android:textColor">@color/gold</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="whiteTextStyle" parent="Theme.Material3.DayNight">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="darkBlueTextStyle" parent="Theme.Material3.DayNight">
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="noCorners" parent="">
        <item name="shapeCornerFamily">rounded</item>
        <item name="cornerSize">0dp</item>
    </style>
    <style name="shapeFragmentAppearance" parent="Theme.Material3.DayNight">
        <item name="background">@android:color/transparent</item>
        <item name="shapeAppearanceOverlay">@style/noCorners</item>
    </style>
</resources>